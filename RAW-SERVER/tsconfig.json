{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",  // Change to include all source files from the root directory
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*",      // Include everything under the src folder
    "utils/**/*"     // Also include utils folder
  ],
  "exclude": [
    "node_modules"
  ]
}
